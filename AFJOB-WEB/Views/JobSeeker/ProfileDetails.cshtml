@model AFJOB_WEB.Models.JobSeekerProfile

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            <p><strong>Address:</strong> @Model.Address</p>

            @if (!string.IsNullOrEmpty(Model.ResumeFile))
            {
                <p><strong>Resume:</strong> <a href="@Model.ResumeFile" target="_blank">Download Resume</a></p>
            }

            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
            {
                <div class="mb-3">
                    <img src="@Model.ProfileImagePath"
                         alt="Profile Picture"
                         style="height: 150px; width: 150px; border-radius: 50%; object-fit: cover;" />
                </div>
            }
            else
            {
                <p class="text-warning"><i class="fas fa-exclamation-circle"></i> No profile picture uploaded.</p>
            }

            <a asp-action="EditProfile" class="btn btn-warning">Edit Profile</a>
        </div>
    </div>
</div>
