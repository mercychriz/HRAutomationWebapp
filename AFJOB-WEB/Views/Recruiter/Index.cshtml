@using AFJOB_WEB.Models
@{
    ViewData["Title"] = "Recruiter Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Dashboard" asp-controller="Recruiter">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Create" asp-controller="ManpowerPlanning">
                                <i class="fas fa-users"></i> Manpower Planning
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="List" asp-controller="Job">
                                <i class="fas fa-briefcase"></i> Manage Jobs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Job" asp-action="Create">
                                <i class="fas fa-plus-circle"></i> Post a Job
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Candidate" asp-action="ListCandidate">
                                <i class="fas fa-file-alt"></i> Job Applications
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Interview">
                                <i class="fas fa-calendar-check"></i> Interviews
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="JobAnalysis" asp-controller="Job">
                                <i class="fas fa-chart-bar"></i> Job Analysis
                            </a>
                        </li>

                       
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Welcome, @ViewBag.FirstName!</h1>
                    <p>Here’s an overview of your company and recruitment activities.</p>
                </div>

                <!-- Employer Profile Overview -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Company Profile</h4>
                    </div>
                    <div class="card-body">
                        <p><strong>Company:</strong> @ViewBag.CompanyName</p>
                        <p><strong>Industry:</strong> @ViewBag.Industry</p>
                        <p><strong>Location:</strong> @ViewBag.Location</p>
                        <p><strong>Description:</strong> @ViewBag.Description</p>

                        <a class="btn btn-info" asp-action="EmployerProfile" asp-controller="Recruiter">View Profile</a>
                        <a class="btn btn-warning" asp-action="EditEmployerProfile" asp-controller="Recruiter">Edit Profile</a>
                    </div>
                </div>

                <!-- Recruiter Stats -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-header">Total Jobs Posted</div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.TotalJobs</h5>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-header">Applications Received</div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.TotalApplications</h5>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card text-white bg-warning mb-3">
                            <div class="card-header">Scheduled Interviews</div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.TotalInterviews</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
</html>
