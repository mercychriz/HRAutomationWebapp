@model AFJOB_WEB.Models.Job

<h2>Delete Job</h2>
<p>Are you sure you want to delete this job?</p>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>
</dl>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.JobId">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="List">Cancel</a>
</form>
