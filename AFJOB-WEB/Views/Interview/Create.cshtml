@model AFJOB_WEB.Models.ViewModels.InterviewViewModel

@{
    ViewData["Title"] = "Schedule Interview";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CandidateName"></label>
        <input asp-for="CandidateName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="CandidateEmail"></label>
        <input asp-for="CandidateEmail" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="JobTitle"></label>
        <input asp-for="JobTitle" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="InterviewDate"></label>
        <input asp-for="InterviewDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="InterviewDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InterviewType"></label>
        <input asp-for="InterviewType" class="form-control" />
        <span asp-validation-for="InterviewType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <!-- Hidden fields -->
    <input type="hidden" asp-for="ApplicationId" />
    <input type="hidden" asp-for="InterviewId" />

    <button type="submit" class="btn btn-success">Schedule Interview</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
